<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageActivity"
    android:padding="16dp">
    
    <TextView
        android:id="@+id/controlAccountTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="التحكم في الحساب"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:drawableEnd="@drawable/ic_outline_person_24"
        android:drawablePadding="3dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        app:layout_constraintTop_toTopOf="@id/controlAccountTv"
        app:layout_constraintBottom_toBottomOf="@id/controlAccountTv"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/secTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="الخصوصية و الامن"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:drawableEnd="@drawable/ic_outline_lock_24"
        android:drawablePadding="3dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/controlAccountTv"
        android:layout_marginTop="50dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        app:layout_constraintTop_toTopOf="@id/secTv"
        app:layout_constraintBottom_toBottomOf="@id/secTv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/walletTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="المحفظة و الشحن"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:drawableEnd="@drawable/ic_outline_account_balance_wallet_24"
        android:drawablePadding="3dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/secTv"
        android:layout_marginTop="50dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        app:layout_constraintTop_toTopOf="@id/walletTv"
        app:layout_constraintBottom_toBottomOf="@id/walletTv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/shareTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="مشاركة الحساب"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:drawableEnd="@drawable/ic_outline_ios_share_24"
        android:drawablePadding="3dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/walletTv"
        android:layout_marginTop="50dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        app:layout_constraintTop_toTopOf="@id/shareTv"
        app:layout_constraintBottom_toBottomOf="@id/shareTv"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>